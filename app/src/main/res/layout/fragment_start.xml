<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.main.start_signin_google.StartFragment">

    <com.google.android.gms.common.SignInButton
        android:id="@+id/btn_by_google"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:visibility="visible" />

    <Button
        android:id="@+id/btn_by_email"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorAccent"
        android:text="@string/enter_by_email"
        android:elevation="4dp"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_by_phone"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:elevation="4dp"
        android:background="@color/colorAccent"
        android:text="@string/enter_by_phone"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tv_to_info"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="@string/to_profile" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-2470617516170934/3216085153" />

</LinearLayout><!--    ca-app-pub-2470617516170934/9230048912-->
